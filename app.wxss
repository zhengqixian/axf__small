.theme-btn{
  border-radius: 10rpx;
  background: #ffd600;
  color: #000;
  text-align: center;
  padding: 20rpx 48rpx;
  font-size: 28rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.theme-btn-light{
  background-color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  position: absolute;
