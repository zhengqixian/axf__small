}
.pub-footer{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  line-height: 100rpx;
  height:100rpx;
  background-color: #fff;
}
.theme-btn-big{
  margin: 14rpx 20%;
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 10rpx;
  color: #000;
}
.theme-radio{
  padding-right: 20rpx;
}
.theme-radio:before{
  content: '';
  display: inline-block;
  border: 1px solid #bdbdbd;
  border-radius: 50%;
  padding: 12rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  background: #fff center center no-repeat;
  -webkit-background-size: 14rpx;
  background-size: 14rpx;
}
.checked.theme-radio:before{
  background-image: url("http://i1.bvimg.com/630761/e2474f1400cca108.png");
  background-color: #ffd600;
  border-color: #ffd600;
}
.text-hidden{
  visibility: hidden;
}
